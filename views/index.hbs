<body>
    <header>
        {{>nav}}
        <h1>Cat Shelter</h1>
        {{>search}}
    </header>
    <main>
        <section class="cats">
            <ul>
                {{#each cats}}
                <li>
                    <img src="/images/{{this.image}}" alt="{{this.name}}">
                    <h3>{{this.name}}</h3>
                    <p><span>Breed: </span>{{this.breed}}</p>
                    <p><span>Description: </span>{{this.description}}</p>
                    <ul class="buttons">
                        <li class="btn edit"><a href="/cats/edit-cat/{{this.id}}">Change Info</a></li>
                        <li class="btn delete"><a href="/cats/new-home/{{this.id}}">New Home</a></li>
                    </ul>
                </li>
                {{/each}}
            </ul>
        </section>
    </main>
</body>